
<p class="text-green-500 mt-4"><%= notice %></p>

<div class="flex justify-center items-center mt-8">
  <section class="bg-gray-500 bg-opacity-5 w-4/5 rounded-lg shadow p-6">
    <div class="flex justify-between items-center w-full pb-4">
      <h1 class="font-semibold text-3xl mb-4"> <%= t('suppliers.title') %></h1>
      <div class="flex justify-end">
        <%= link_to t('suppliers.new_supplier'), new_supplier_path(locale: I18n.locale), class: "bg-blue-500 text-white py-2 px-4 bg-primary-500 rounded-lg hover:bg-primary-600 ease-in-out cursor-pointer duration-300 text-secondary-500" %>
      </div>
    </div>

    <table class="min-w-full">
      <thead>
        <tr>
          <th class="p-4 text-sm font-semibold leading-4 text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50">Nombre</th>
          <th class="p-4 text-sm font-semibold leading-4 text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50">Contacto</th>
          <th class="p-4 text-sm font-semibold leading-4 text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50">Tel√©fono</th>
          <th class="p-4 text-sm font-semibold leading-4 text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50">Banco</th>
          <th class="p-4 text-sm font-semibold leading-4 text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50">Cuenta</th>
          <th class="p-4 text-sm font-semibold leading-4 text-left text-gray-500 uppercase border-b border-gray-200 bg-gray-50">Acciones</th>
        </tr>
      </thead>
      <tbody id="banks">
        <% @suppliers.each do |supplier| %>
          <%= render supplier %>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
