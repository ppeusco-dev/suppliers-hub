<div class="container mx-auto max-w-4xl p-6 bg-white rounded-lg shadow-md">
  <p class="text-green-500"><%= notice %></p>
  <div class="grid grid-cols-2 gap-4">
    <div>
      <h1 class="text-3xl font-semibold mb-4"><%= @bank.name %></h1>
      <!-- Agrega aquí cualquier otra información específica del banco que desees mostrar -->

      <div class="flex mt-4">
        <%= link_to t('shared.links.edit'), edit_bank_path(@bank, locale: I18n.locale), class: "inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" %>
        <%= button_to t('shared.links.destroy'), bank_path(@bank, locale: I18n.locale),
                      method: :delete,
                      data: { confirm: t('banks.form.confirm_delete') },
                      class: "inline-block ml-2 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-700" %>
      </div>
    </div>
    <div class="flex justify-end items-start">
      <%= link_to t('banks.back_to_banks'), banks_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
  <!-- Puedes agregar más contenido aquí según tus necesidades -->
</div>